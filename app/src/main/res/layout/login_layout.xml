    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_cover_image"
        android:background="#fff"
        android:layout_marginLeft="@dimen/sp_20"
        android:layout_marginRight="@dimen/sp_20"
        android:layout_marginTop="-80dp"
        android:elevation="15dp"
        app:corner_radius="@dimen/dp_5"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="Login Your Tour group"
            android:textColor="#333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--<TextView
            android:id="@+id/user_profile_short_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_name"
            android:layout_centerHorizontal="true"
            android:text="Android free tutorials and example"
            android:textColor="#333"
            android:textSize="14sp" />-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:layout_marginTop="120dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textSize="15sp"
                android:backgroundTint="#ccc"
                android:gravity="center"
                android:hint="Email ID"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/passcode"
            android:backgroundTint="#ccc"
                android:layout_marginTop="15dp"
                android:hint="Passcode"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/logintext"
                android:gravity="center"
                android:layout_below="@+id/passcode"
                android:hint="By clicking login you agreeout terms and policy"/>
            <Button
                android:layout_width="250dp"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/logintext"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:id="@+id/login_btn"
                android:layout_marginTop="@dimen/sp_20"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_corner_button"
                />

        </RelativeLayout>
    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
