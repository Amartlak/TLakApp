                 android:elevation="5dp"
         android:layout_height="250dp"
                 android:background="#999"
                 android:layout_marginTop="15dp"
                 >
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id="@+id/img"/>
             </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>-->
            <!-- <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                 android:layout_width="match_parent"
                 app:corner_radius="10dp"
                 android:elevation="5dp"
                 android:textColor="#333"
                 android:layout_marginTop="15dp"
                 android:background="#999"
                 android:layout_height="300dp">
                 <ImageView
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:id="@+id/img"/>
             </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Agra"
                android:id="@+id/heading"
                android:elevation="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/day"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Highlights"
                android:elevation="5dp"
                android:id="@+id/descriptionHeading"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/day"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Info"
                android:elevation="5dp"
                android:textColor="@color/black"
                android:id="@+id/inclusion"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:id="@+id/inclusion_detail"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day Notes"
                android:textColor="@color/black"
                android:id="@+id/exclusion"
                android:elevation="5dp"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exclusion_detail"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:elevation="5dp"
                android:layout_marginTop="5dp"
                />

        </LinearLayout>
    </ScrollView>
