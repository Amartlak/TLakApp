<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:layout_width="match_parent"
    android:weightSum="3"
    android:id="@+id/alrts_navi"
    android:background="#000"
    android:layout_height="55dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_weight="0.6"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:id="@+id/back_btnx_txt"
        android:src="@drawable/back_arrows"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/hedrtxt"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_weight="2.1"
        android:text="Wat Consulting services"/>
    <!--<ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:id="@+id/doctofilsdoc"
        android:src="@drawable/notification_ico"/>-->

</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardMaxElevation="12dp"
        android:elevation="18dp"
        app:cardCornerRadius="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:layout_margin="@dimen/dp_10"
        app:cardElevation="10dp"

        app:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:corner_radius="@dimen/dp_10"
                android:id="@+id/images">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="253dp"
                    android:id="@+id/hotelImg"
                    />
                <!--  <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="@dimen/dp_200"
                         android:background="@drawable/background_img" />-->

                <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                    android:id="@+id/hjkf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginRight="@dimen/dp_30"
                    android:background="#fff"
                    app:corner_radius="@dimen/dp_5"
                    android:elevation="5dp">

                    <RelativeLayout
                        android:id="@+id/fir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_10">

                        <TextView
                            android:id="@+id/hotel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#923701"
                            android:text="Shangiri-La Hotel, Bangkok" />

                        <ImageView
                            android:id="@+id/hj"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_below="@+id/hotel_name"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/hotel_map_marker" />

                        <TextView
                            android:id="@+id/hotel_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hotel_name"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@+id/hj"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:text="Shangiri-La Hotel, Bangkok" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fir"
                        android:padding="@dimen/dp_10">

                        <!-- <RatingBar
                             android:id="@+id/ratingBar"
                             style="?android:attr/ratingBarStyleSmall"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:rating="3" />

                         <TextView
                             android:id="@+id/rating"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_centerInParent="true"
                             android:layout_marginLeft="5dp"
                             android:layout_toRightOf="@+id/ratingBar"
                             android:text="3"
                             android:textColor="#000"
                             android:textStyle="bold" />
     -->
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginLeft="7dp"
                            android:id="@+id/review"
                            android:text="2452 Review" />-->
                    </RelativeLayout>

                </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hjkf"
                    android:id="@+id/address"
                    android:padding="@dimen/dp_10"
                    android:layout_marginTop="10dp"
                    xmlns:android="http://schemas.android.com/apk/res/android">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:id="@+id/firsts">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/wifi"
                            android:id="@+id/im"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Free Wifi"
                            android:id="@+id/wifi"
                            android:textSize="11sp"
                            android:layout_marginTop="2dp"
                            android:textColor="#333"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/im"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_below="@+id/wifi"
                            android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/television"
                            android:id="@+id/ims"
                            android:text="free wifi"
                            android:layout_below="@+id/im"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:id="@+id/tv"
                            android:textSize="11sp"
                            android:textColor="#333"
                            android:layout_gravity="center_vertical"
                           android:gravity="center_horizontal"
                            android:layout_below="@+id/wifi"

                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/ims"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/bed"
                            android:id="@+id/imjd"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="King Sized Bed"
                            android:id="@+id/bed"
                            android:textSize="11sp"
                            android:textColor="#333"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imjd"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_below="@+id/bed"
                            >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/air_conditioner"
                            android:id="@+id/imsfd"
                            android:text="AC"
                            android:layout_below="@+id/imjd"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AC"
                            android:id="@+id/ac"
                            android:layout_below="@+id/bed"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:textSize="11sp"
                            android:textColor="#333"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imsfd"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/dp_10"
                        android:layout_alignParentEnd="true"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/power_bank"
                            android:id="@+id/imj"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power backup"
                            android:id="@+id/backup"
                            android:textSize="11sp"
                            android:layout_marginTop="@dimen/dp_2"
                            android:textColor="#333"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imj"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/backup"
                            android:layout_marginTop="@dimen/dp_12">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/geyser"
                            android:id="@+id/imsf"

                            android:text="TV"
                            android:layout_below="@+id/imj"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Geyser"
                            android:id="@+id/geyser"
                            android:textSize="11sp"
                            android:textColor="#333"
                            android:layout_below="@+id/backup"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imsf"
                            />
                        </LinearLayout>
                    </RelativeLayout>
                    </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:paddingLeft="15dp"
                    android:id="@+id/address_text"
                    android:textSize="16sp"
                    android:textColor="#333"
                    android:text="Address:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/addres"
                    android:textColor="#333"
                    android:layout_toRightOf="@+id/address_text"
                    android:paddingRight="15dp"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="Bangkok"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A travel document is an identity document issued by a government or international treaty organization to facilitate the movement of individuals."
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#000"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/hotel_descrp"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_below="@+id/addres"/>
            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ListView
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_height="match_parent"

            android:id="@+id/numofuser"/>

    </LinearLayout>
</LinearLayout>

    </ScrollView>

</LinearLayout>