<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a1a1a1"
        android:outlineAmbientShadowColor="#C7C7C7"
        android:outlineSpotShadowColor="#000000"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2">

                <TextView
                    android:id="@+id/weakday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOV"
                    android:textColor="#A9A9A9"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weakday"
                    android:text="20, February 2020"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/wind_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="3dp"
                    android:text="Wind:"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/wind_txt"
                    android:text="gshfgdhs"
                    android:textColor="#000"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/cloudImg"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cloudImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="ghjfgjdhsjhsgjhf"
                    android:textSize="@dimen/dp_14" />

                <LinearLayout
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <!-- <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                          android:textColor="#000"
                         android:textSize="@dimen/dp_18"
                         android:text="Max "/>-->
                    <TextView
                        android:id="@+id/maxtemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ghghj"
                        android:textColor="#000"
                        android:textSize="36sp"

                        />

                    <TextView
                        android:id="@+id/cel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:clickable="true"
                        android:text=" ℃ "
                        android:textColor="#000"
                        android:textSize="@dimen/dp_18"

                        />

                    <TextView
                        android:id="@+id/celaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:clickable="true"
                        android:text="|"
                        android:textColor="#000"

                        android:textSize="@dimen/dp_18"

                        />

                    <TextView
                        android:id="@+id/celaaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:clickable="true"
                        android:text=" ℉"
                        android:textColor="#000"
                        android:textSize="@dimen/dp_18"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/max"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min  "
                        android:textColor="#000"
                        android:textSize="@dimen/dp_10" />

                    <TextView
                        android:id="@+id/mintemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ghghj"
                        android:textColor="#000"
                        android:textSize="16sp"

                        />

                    <TextView
                        android:id="@+id/min_cel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text=" ℃ "
                        android:textColor="#000"

                        android:textSize="@dimen/dp_10"

                        />

                    <TextView
                        android:id="@+id/celahaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="|"
                        android:textColor="#000"

                        android:textSize="@dimen/dp_10"

                        />

                    <TextView
                        android:id="@+id/min_cel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text=" ℉"
                        android:textColor="#000"

                        android:textSize="@dimen/dp_10"

                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
