<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">
<data>
    <variable
        name="FabHandler"
        type="com.watconsult.tlakapp.MainActivity.FabHandler"/>
</data>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="?attr/actionBarSize"
        tools:openDrawer="start"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar" />
            </LinearLayout>
<!--<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="wrap_content"
    android:id="@+id/swipe"
    android:layout_height="wrap_content">  -->
            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
<!--</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->
        </LinearLayout>

        <!--<include layout="@layout/list_layout"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>-->

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            android:choiceMode="singleChoice"
            android:elevation="5dp"
            android:layout_marginBottom="?attr/actionBarSize"

            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

        <!-- <include layout="@layout/navgationview"/>-->
    </androidx.drawerlayout.widget.DrawerLayout>
    <RelativeLayout
        android:id="@+id/shareDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/shareLayout"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/sharedoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:padding="5dip"
            android:text="Hotel"
            android:textStyle="bold"
            android:background="@drawable/shape_fab_label"
            android:textColor="#fff"
            android:typeface="normal"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_toRightOf="@+id/sharedoc"
            app:fabSize="mini"
            app:srcCompat="@drawable/hotel_ico" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shareLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:layout_above="@+id/shareLay"
        android:layout_alignParentEnd="true"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/shareLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:padding="5dip"
            android:text="Optionals"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/shape_fab_label"
            android:typeface="normal" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shareFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_toRightOf="@+id/shareLabelTextView"
            app:fabSize="mini"
            app:srcCompat="@drawable/upcoming_tour_ico" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shareLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/createLayout"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/shareLabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:padding="5dip"
            android:text="SOS"
            android:textStyle="bold"
            android:background="@drawable/shape_fab_label"
            android:textColor="#fff"
            android:typeface="normal" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/shareF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_toRightOf="@+id/shareLabelText"
            app:fabSize="mini"
            app:srcCompat="@drawable/sos_ico" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/createLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/baseFloatingActionButton"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/createLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/shape_fab_label"
            android:padding="5dip"
            android:text="Documents"
            android:textColor="#fff"
            android:textStyle="bold"
            android:typeface="normal" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/createFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_toRightOf="@+id/createLabelTextView"
            app:fabSize="mini"
            app:srcCompat="@drawable/document_ico" />
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_above="@+id/mapbottom"
        android:layout_alignEnd="@id/bottom"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:id="@+id/baseFloatingActionButton"
        android:onClick="@{FabHandler::onBaseFabClick}"
        android:tint="@android:color/black"
        android:elevation="@dimen/dp_18"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:background="@color/black"
        android:layout_height="wrap_content"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mapbottom"
        android:background="@color/white"
        android:layout_above="@id/bottom"
        android:visibility="gone"
        app:menu="@menu/map_menu"
        app:itemIconTint="@drawable/selector_navigation"
        app:itemTextColor="@drawable/selector_navigation"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        />
    <!--   <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom"
            app:itemTextColor="@color/text_selector"
            android:background="#000"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"
            app:menu="@menu/menu_bottom_navigation"
           />-->
    <!-- <com.google.android.material.bottomnavigation.BottomNavigationView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/bottom"
         android:background="#000"
         app:menu="@menu/menu_bottom_navigation"
         app:labelVisibilityMode="labeled"
         app:itemTextColor="@color/text_selector"
         app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
         app:itemTextAppearanceInactive="@style/BottomNavigationView"
         android:layout_alignParentBottom="true"/>-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemTextColor="@color/text_selector"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
        app:itemTextAppearanceInactive="@style/BottomNavigationView"
        app:menu="@menu/menu_bottom_navigations"
        android:background="#000"/>
</RelativeLayout>
</layout>