<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardUseCompatPadding="true"
    android:elevation="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:scaleType="center"
            android:layout_marginEnd="0dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/img"
            android:textSize="18dp"
            android:textColor="#333"
            android:id="@+id/poi_text"
            android:paddingLeft="@dimen/dp_10"
            android:text="Big Almaty Lake"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/poi_text"
            android:textSize="14sp"
            android:textColor="#333"
            android:id="@+id/poi_sub_text"
            android:text="Reservoir in Kazakhstan"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/poi_sub_text"
            android:textSize="12sp"
            android:textColor="#333"
            android:id="@+id/poi_detail"
            android:text="Big Almaty Lake is a naturl alpine reservoir. It is located in the Trans-lli Alatau mountains, 15 km south from the center of Almaty of Kazakhstan."
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poi_detail"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:orientation="horizontal">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:id="@+id/one"
           android:layout_marginTop="@dimen/dp_5"
           android:gravity="center"
          >
           <ImageView
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:paddingLeft="@dimen/dp_10"
               android:background= "@drawable/poi_direction_ico"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp_10"
               android:id="@+id/direction"
               android:textColor="#333"
               android:text="Direction"/>
       </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/two"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/one"
            android:layout_below="@+id/text1">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/poi_distance_ico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_10"
                android:textColor="#333"
                android:id="@+id/kms"
                android:text="0.5 k.m"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="10dp"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="right"
       android:visibility="gone"
       android:layout_gravity="right">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/hour_text"
           android:textColor="#333"
           android:text="Hours: "/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#333"
           android:id="@+id/hour"

           android:text="Open"/>
   </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/sss"
            android:visibility="gone"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/length_text"
                android:textColor="#333"
                android:text="Length: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333"
                android:id="@+id/length"
                android:text="1.6 km"/>
        </LinearLayout>
</LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>
