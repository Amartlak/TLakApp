<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/change_hotel"
android:background="#fff"
xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
       >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/hImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:scaleType="centerInside"
            app:riv_corner_radius="5dp"
            app:riv_mutate_background="true" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:id="@+id/card"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardElevation="16dp"
            app:cardCornerRadius="8dp"

            card_view:cardUseCompatPadding="false">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <RelativeLayout
                    android:id="@+id/fir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:text="Shangiri-La Hotel, Bangkok"
                        android:textColor="#923701" />

                    <ImageView
                        android:id="@+id/hj"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/hotel_name"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/hotel_map_marker" />
                    <TextView
                        android:id="@+id/hotel_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hotel_name"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/hj"
                        android:text="Shangiri-La Hotel, Bangkok" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fir"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingBottom="15dp"
                    android:paddingRight="15dp"
                    >
                    <!--  <RatingBar
                          android:id="@+id/ratingBar"
                          style="?android:attr/ratingBarStyleSmall"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:rating="3" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/ratingBar"
                          android:textSize="10sp"
                          android:text="Very Good"/>
                      <TextView
                          android:id="@+id/rating"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="5dp"

                          android:layout_toRightOf="@+id/ratingBar"
                          android:text="3"

                          android:textColor="#000"
                          android:textStyle="bold" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="7dp"
                          android:layout_toRightOf="@+id/rating"
                          android:text="2452 Review" />-->
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/round_corner"
                        android:textColor="#fff"
                        android:id="@+id/viewname"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="View your name"
                        android:layout_height="25dp"/>
                </RelativeLayout>
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    />-->
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>
   <!-- <View
        android:layout_width="match_parent"
        android:id="@+id/viws_item"
        android:layout_height="100dp"/>-->
</LinearLayout>

</FrameLayout>
