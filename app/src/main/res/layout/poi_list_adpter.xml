<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="8dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/img" />
            <TextView
                android:id="@+id/poi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_marginTop="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_10"
                android:text="Big Almaty Lake"
                android:textColor="#333"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/poi_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poi_text"
                android:layout_marginTop="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:text="Reservoir in Kazakhstan"
                android:textColor="#333"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/poi_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poi_sub_text"
                android:layout_marginTop="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="10dp"
                android:text="Big Almaty Lake is a naturl alpine reservoir. It is located in the Trans-lli Alatau mountains, 15 km south from the center of Almaty of Kazakhstan."
                android:textColor="#333"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poi_detail"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_5">

                <LinearLayout
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:paddingLeft="@dimen/dp_10"
                        android:src="@drawable/poi_direction_ico" />

                    <TextView
                        android:id="@+id/direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:text="Direction"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toRightOf="@+id/one"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/poi_distance_ico" />

                    <TextView
                        android:id="@+id/kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5 k.m"
                        android:textColor="#333"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"

                        android:gravity="right">

                        <TextView
                            android:id="@+id/hour_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hours: "
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/hour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open"

                            android:textColor="#333" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/sss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/length_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Length: "
                            android:textColor="#333" />

                        <TextView
                            android:id="@+id/length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.6 km"
                            android:textColor="#333" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
