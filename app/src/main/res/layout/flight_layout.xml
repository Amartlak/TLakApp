<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/flight_change"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
 <!--  <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       app:cardMaxElevation="12dp"
       android:elevation="18dp"
       android:id="@+id/flights"
       app:cardCornerRadius="10dp"
       android:divider="@android:color/transparent"
       android:dividerHeight="0.0px"
       android:clipToPadding="false"
       android:clipChildren="false"
       app:cardElevation="10dp"
       android:layout_margin="10dp"
       app:cardPreventCornerOverlap="false">-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/link">
   <androidx.cardview.widget.CardView
       xmlns:card_view="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/card"
       card_view:cardElevation="8dp"
       card_view:cardUseCompatPadding="true">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/click"
          android:padding="10dp">
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/first">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:id="@+id/lay1"
                android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:id="@+id/city"
                   android:textColor="#333"
                   android:textSize="@dimen/sp_18"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="12:00"
                   android:textColor="#333"
                   android:id="@+id/flight_time"
                   android:textSize="21sp"
                   android:layout_below="@+id/city"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/lay2"
               android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="45dp"
                   android:layout_marginLeft="55dp"
                   android:layout_alignParentTop="true"
                   android:textSize="@dimen/sp_14"
                   android:textColor="#333"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/timess"
                   android:text="2 Hours 10 Min"/>
               <ImageView
                   android:layout_width="170dp"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_centerHorizontal="true"
                   android:id="@+id/lk"
                   android:src="@drawable/flight_layout_strip"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Non - Stop"
                   android:layout_marginTop="45dp"
                   android:layout_marginLeft="65dp"
                   android:textColor="#333"
                   android:id="@+id/nonstop"
                   android:layout_centerHorizontal="true"
                   android:textSize="@dimen/sp_14"
                   android:layout_below="@+id/lk"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/lay2"
                android:padding="11dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:text=""
                   android:textColor="#333"
                   android:id="@+id/dest_city"
                   android:textSize="@dimen/sp_18"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="13:00"
                   android:textColor="#333"
                   android:id="@+id/flight_dest_time"
                  android:textSize="21sp"
                   android:layout_alignParentRight="true"
                   android:layout_below="@+id/dest_city"/>
            </RelativeLayout>

         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/first"
             android:id="@+id/kl"
             android:padding="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second"
                >
               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:id="@+id/circle"
                   android:src="@drawable/ic_cancel"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@+id/circle"
                   android:layout_marginLeft="10dp"
                   android:layout_centerInParent="true"
                   android:id="@+id/flight_no"
                   android:text="6E 189"
                   android:textSize="@dimen/sp_14"
                   android:textColor="#333"/>
               <!--  <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="$ 7562"
                       android:textSize="20dp"
                       android:textColor="#000"
                       android:textStyle="bold"
                       android:layout_centerInParent="true"
                       android:layout_alignParentEnd="true"/>-->

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
               >
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="? "
                   android:textSize="16sp"
                   android:id="@+id/dd"
                   android:textColor="#000"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Flight Info"
                   android:textSize="@dimen/sp_14"
                   android:textColor="#333"
                   android:id="@+id/flight_info"
                   android:layout_toRightOf="@+id/dd"
                   android:layout_centerHorizontal="true"
                   />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                android:textColor="#333"
                android:id="@+id/price"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
         </RelativeLayout>
         <!--  <View
               android:layout_width="match_parent"
               android:layout_height="20dp"
               android:id="@+id/jkd"
               android:layout_below="@+id/kl"/>
   <include flight_layout="@flight_layout/list_detail_layout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/jkd"/>-->
      </RelativeLayout>
      <!-- <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="300dp"
           app:cardMaxElevation="12dp"
           android:elevation="18dp"
           android:dividerHeight="0.0px"
           android:clipToPadding="false"
           app:cardPreventCornerOverlap="false"
           android:clipChildren="false"
           app:cardCornerRadius="10dp"
           android:layout_margin="10dp"
           android:divider="@android:color/transparent"
           xmlns:app="http://schemas.android.com/apk/res-auto">-->
   </androidx.cardview.widget.CardView>
   </LinearLayout>
</FrameLayout>