        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:layout_width="match_parent"
            app:corner_radius="10dp"
            android:elevation="5dp"
            android:textColor="#333"
            android:layout_marginTop="15dp"
            android:background="#999"
            android:layout_height="300dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img"/>
        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Agra"
            android:textColor="#333"
            android:id="@+id/heading"
            android:elevation="5dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textColor="#333"
            android:id="@+id/day"
            android:elevation="5dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="#333"
        android:elevation="5dp"
        android:id="@+id/descriptionHeading"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/day"
        android:textSize="18sp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:id="@+id/description"
        android:elevation="5dp"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inclusion"
        android:elevation="5dp"
        android:textColor="#333"
        android:id="@+id/inclusion"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:textSize="14sp"
        android:textColor="#333"
        android:id="@+id/inclusion_detail"
        android:layout_marginTop="5dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exclusion"
        android:textColor="#333"
        android:id="@+id/exclusion"
        android:elevation="5dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:id="@+id/exclusion_detail"
        android:textSize="14sp"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
       />

    </LinearLayout>
    </ScrollView>
