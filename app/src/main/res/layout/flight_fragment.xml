    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardMaxElevation="12dp"
        android:elevation="18dp"
        app:cardCornerRadius="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:id="@+id/flights"
        app:cardElevation="10dp"
        android:layout_margin="10dp"
        app:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click"
        android:padding="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:id="@+id/lay1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEL"
                    android:id="@+id/hhg"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:00 PM"
                    android:id="@+id/bn"
                    android:layout_below="@+id/hhg"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/lay1"
                android:id="@+id/lay2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="45dp"
                    android:layout_marginLeft="55dp"
                    android:layout_alignParentTop="true"
                    android:text="2 Hours 10 Min"/>
                <ImageView
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/lk"
                    android:src="@drawable/flight_layout_strip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Non - Stop"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="65dp"
                    android:layout_below="@+id/lk"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/lay2"
                android:padding="15dp"
                android:layout_centerInParent="true"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="BOM"
                    android:id="@+id/hh"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00 PM"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/hh"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first"
            android:id="@+id/kl"
            android:padding="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:id="@+id/circle"
                    android:src="@drawable/ic_cancel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/circle"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:text="6E 189"
                    android:textSize="16dp"
                    android:textColor="#000"/>
                <!--  <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 7562"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:layout_alignParentEnd="true"/>-->

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/second">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="? "
                    android:textSize="16dp"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/dd"
                    android:textColor="#000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flight Info"
                    android:textSize="16dp"
                    android:textColor="#000"
                    android:layout_toRightOf="@+id/dd"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 7562"
                android:textSize="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="20dp"
              android:id="@+id/jkd"
              android:layout_below="@+id/kl"/>
  <include layout="@layout/list_detail_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/jkd"/>-->
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>